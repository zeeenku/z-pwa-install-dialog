{
    "compilerOptions": {
        "target": "es5",
        "lib": ["dom", "es2015"],
        "allowJs": true,
        "jsx": "react-jsx",  // Enable the new JSX transform
        "moduleResolution": "node",
        "declaration": true,
        "declarationDir": "./dist/types", 
        "esModuleInterop": true,
        "skipLibCheck": true,
        "strict": true,
        "baseUrl": ".",
        "paths": {
            "@/*": ["./src/*"]
        }
    },
    "include": ["src/**/*"]
}